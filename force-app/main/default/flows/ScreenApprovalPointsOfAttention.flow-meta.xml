            </visibilityRule>
        </fields>
        <fields>
            <name>displCommitment</name>
            <fieldText>&lt;ul&gt;&lt;li&gt;&lt;span style=&quot;color: rgb(218, 35, 35); font-size: 14px;&quot;&gt;Please note that a fixed commitment was chosen on this deal:&lt;/span&gt;&lt;ul&gt;&lt;li&gt;Committed Transactions: &lt;strong&gt;{!getClaimMemberToApprove.Claim__r.CommittedTransactions__c}&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;Commitment in Years: &lt;strong&gt;{!getClaimMemberToApprove.Claim__r.CommitmentInYears__c}&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;Costs per Transaction:  &lt;strong&gt;{!getClaimMemberToApprove.Claim__r.CostsPerTransaction__c} (in {!getClaimMemberToApprove.Claim__r.CurrencyIsoCode})&lt;/strong&gt;&lt;/li&gt;&lt;/ul&gt;&lt;/li&gt;&lt;/ul&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
            <visibilityRule>
                <conditionLogic>and</conditionLogic>
                <conditions>
