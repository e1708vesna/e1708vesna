        <fields>
            <name>displPointsOfAttention</name>
            <fieldText>&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Hey Approver! &lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Here are some important details of the Claim Members that you&apos;re about to review.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;You&apos;re approving the Claim Member &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;{!getClaimMemberToApprove.ClaimMemberName__c} &lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;for the Account &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;{!getClaimMemberToApprove.Account__r.Name}&lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;. Below you can find the other Claim Members on this Claim, the Percentage split and potential points of attention.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Special points of attention:&lt;/strong&gt;&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>displExceptionClaim</name>
            <fieldText>&lt;ul&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px; color: rgb(218, 35, 35);&quot;&gt;Please note that this is an Exception Claim of the type: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px; color: rgb(0, 0, 0);&quot;&gt;{!getClaimMemberToApprove.Claim__r.ClaimType__c}&lt;/strong&gt;&lt;/li&gt;&lt;/ul&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
            <visibilityRule>
                <conditionLogic>or</conditionLogic>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Exception</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>IPP Advance</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Merchant Account Claim</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Different Split Percentages</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Issuing Incentive</stringValue>
                    </rightValue>
                </conditions>
                <conditions>
                    <leftValueReference>getClaimMemberToApprove.Claim__r.ClaimType__c</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <stringValue>Other</stringValue>
                    </rightValue>
                </conditions>
            </visibilityRule>
        </fields>
