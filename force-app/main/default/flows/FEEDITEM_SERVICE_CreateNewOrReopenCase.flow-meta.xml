    <start>
        <locationX>452</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>decCaseStatus</targetReference>
        </connector>
        <filterFormula>AND(
        OR(
              {!$Record.Parent:Case.RecordType.DeveloperName} = &apos;ServiceCase&apos;, {!$Record.Parent:Case.RecordType.DeveloperName} = 
               &apos;InternalCase&apos;, {!$Record.Parent:Case.RecordType.DeveloperName} = &apos;Support&apos;),
        OR(
               {!$Record.CreatedBy:User.ContactId} &lt;&gt; NULL,
               {!$Permission.ServiceIntegrationStatusUpdate}),

        NOT(ISPICKVAL({!$Record.Parent:Case.AutoCloseReason__c}, &apos;Blocked Email&apos;)),

         OR(
               {!$Record.Parent:Case.IsShopperCase__c} == false, 
               {!$Record.Parent:Case.ShopperCaseAllowed__c})
)</filterFormula>
        <object>FeedItem</object>
        <recordTriggerType>Create</recordTriggerType>
