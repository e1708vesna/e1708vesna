    <description>Last Update: Differentiation naming Partner versus Merchant Account Plans</description>
    <environments>Default</environments>
    <formulas>
        <name>AccountPlanName</name>
        <dataType>String</dataType>
        <expression>IF(
CONTAINS({!$Record.RecordType.DeveloperName}, &quot;Partner&quot;),
&quot;PAP-&quot;&amp;LEFT({!$Record.Account__r.Name}, 76),
&quot;AP-&quot;&amp;LEFT({!$Record.Account__r.Name}, 77)
)</expression>
    </formulas>
    <formulas>
        <name>forUserName</name>
        <dataType>String</dataType>
        <expression>{!$User.FirstName} &amp; &quot; &quot; &amp; {!$User.LastName}</expression>
    </formulas>
