<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <assignments>
        <description>When the Internal Support Cases Queue is the owner, the case topic should get defaulted to Cases (Service Cloud).</description>
        <name>TopicCasesServiceCoud</name>
        <label>Topic Cases (Service Cloud)</label>
        <locationX>50</locationX>
        <locationY>395</locationY>
        <assignmentItems>
            <assignToReference>$Record.Topic__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Cases (Service Cloud)</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>Checks whether the owner of the case is the Internal Support Cases Queue.</description>
        <name>InternalSupportCasesQueue</name>
        <label>Internal Support Cases Queue?</label>
        <locationX>182</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>YesInternalSupportCasesQueue</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Owner:Group.DeveloperName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>InternalSupportCasesQueue</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>TopicCasesServiceCoud</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <interviewLabel>Before-Save Case Creation Internal Support Case {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Before-Save Case Creation Internal Support Case</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>InternalSupportCasesQueue</targetReference>
        </connector>
        <object>Case</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
