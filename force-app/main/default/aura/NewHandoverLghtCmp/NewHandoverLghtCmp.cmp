<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,lightning:actionOverride,force:lightningQuickAction,force:hasRecordId" >
    <lightning:workspaceAPI aura:id="workspace"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:attribute name="loading" type="Boolean" default="True"/>
    <aura:attribute name="error" type="String" default=""/>
    <div aura:id="editDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <div class="slds-modal__header">
                <lightning:layout>
                    <lightning:layoutItem size="8">
                        <h2 class="slds-text-heading--medium">New Handover</h2>
                    </lightning:layoutItem>
                    <lightning:layoutItem size="4" class="right-align">
                        <div class="slds-float--right">
                            <lightning:buttonIcon iconName="utility:close" variant="bare" onclick="{! c.handleClose }" alternativeText="Close" title="Close" />
                        </div>
                    </lightning:layoutItem>
                </lightning:layout>
            </div>
            <div class="slds-modal__content slds-p-around--medium slds-grid slds-wrap ">
                <div class="slds-align_absolute-center">
                    <!--<aura:if isTrue="{! NOT(v.loading)}">-->
                        <aura:if isTrue="{! v.error.length > 0}">
                            {! v.error}
                            <aura:set attribute="else">
                                <lightning:flow aura:id="flowData" onstatuschange="{!c.handleStatusChange}"/>
                            </aura:set>
                        </aura:if>
                    <!--</aura:if>-->
                </div>
            </div>
        </div>
    </div>
    <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>
</aura:component>