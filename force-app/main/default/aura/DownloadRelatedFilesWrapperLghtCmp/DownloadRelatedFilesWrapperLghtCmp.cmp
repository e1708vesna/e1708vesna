<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="isExpanded" default="false" type="Boolean" />
    <aura:attribute name="headerTitle" type="Aura.Component[]">
        <div >
            <h2 class="cardheader" onclick="{! c.handleExpand }">
                <b>Related Files</b>
            </h2>
        </div>
    </aura:attribute>
    
    <div>
        <lightning:card class="slds-card_boundary forceRelatedListCardHeader" title="{!v.headerTitle}" iconName="standard:attach">
            <aura:set attribute="actions">
                <aura:if isTrue="{!v.isExpanded}">
                	<lightning:button variant="base" label="collapse" title="collapse" onclick="{! c.handleExpand }" iconName="utility:chevronup" iconPosition="right"/>
                    
                    
                    
                    <aura:set attribute="else">
                        <lightning:button variant="base" label="expand" title="expand" onclick="{! c.handleExpand }" iconName="utility:chevrondown" iconPosition="right"/>
                    </aura:set>
                </aura:if>
            </aura:set>
            <aura:if isTrue="{!v.isExpanded}">
                        <c:DownloadRelatedFilesLghtCmp recordId="{!v.recordId}"></c:DownloadRelatedFilesLghtCmp>
            </aura:if>
            
        </lightning:card>
    </div> 
    
</aura:component>