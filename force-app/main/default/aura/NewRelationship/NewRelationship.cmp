<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,lightning:actionOverride,lightning:isUrlAddressable" access="global" >
    
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="isOpen" type="Boolean" default="true" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    
    <lightning:workspaceAPI aura:id="workspace"/>
    
        <div aura:id="modalDialog" role="dialog" tabindex="-1" aria-labelledby="header43" class="slds-modal slds-fade-in-open">
            <div aura:id="modalDialog2" class="slds-modal__container">
                <lightning:buttonIcon
                    iconName="utility:close"
                    onclick="{!c.hideModal}"
                    alternativeText="close"
                    variant="bare-inverse"
                    class="slds-modal__close"/>
                
                <div class="slds-modal__header">
                    <h2 class="slds-text-heading--medium">New Record</h2>
                </div>
                <div class="slds-modal__content slds-p-around--medium">
                    <lightning:flow aura:id="flowData" onstatuschange="{!c.closeModalOnFinish}"/>
                </div>
                
            </div>
        </div>
        
        <div aura:id="overlay" class="slds-backdrop slds-backdrop--open"></div>
    
</aura:component>